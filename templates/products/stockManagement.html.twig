{% extends 'base.html.twig' %}

{% block title %}Manejo y administración de stock de productos{% endblock %}

{% block body %}


    <div class = "card shadow p-0 col-lg-6">
        <div class = "card-header">
            <h3 class = "text-primary font-weight-bold">Manejo y administración de stock</h3>
        </div>
        <div class = "card-body d-flex flex-column justify-content-start">
            <h5 class = "ml-3 mb-2">Stock actual: <label id = "stockActual">{{ producto.stock }}</label></h5>
            <h5 class = "ml-3 mb-5">Stock tras los cambios: <label id = "stockModificado">{{ producto.stock }}</label></h5>

            {{ include('categories/_form.html.twig', {'button_label': 'Actualizar'}) }}
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src = "{{ asset('js/stockUpdater.js') }}"></script>
{% endblock %}